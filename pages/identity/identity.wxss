.identity {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.identity-img {
  height: 180px;
  width: 180px;
  margin: 40px 0 20px 0;
}
.identity-input {
  width: 80%;
  text-align: center;
  padding: 0 10px;
}
.input {
  border: none;
  border-bottom: 1px solid rgb(191, 191, 191);
  height: 40px;
  margin: 0 0 40px 0;
}
.button {
  font-size: 95%;
  height: 40px;
  width: 120px;
}