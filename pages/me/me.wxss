.userinfo-rotate {
  transform:rotate(-10deg);
  background-color: rgb(249, 184, 190);
  width: 300%;
  height: 40%;
  position: absolute;
  left: -120%;
  top: -25%;
  z-index: -1;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.1);
}
