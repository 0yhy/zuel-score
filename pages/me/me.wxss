.userinfo-rotate {
  transform:rotate(-10deg);
  background-color: rgb(249, 184, 190);
  width: 300%;
  height: 40%;
  position: absolute;
  left: -120%;
  top: -25%;
  z-index: -1;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.1);
}
.userinfo-avatar {
  border-radius: 50%;
  height: 100px;
  width: 100px;
  overflow: hidden;
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  position: absolute;
  top: 3%;
  right: 12%;
}
.userinfo-nickname-and-verified {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  font-size: 200%;
  font-weight: bold;
  line-height: 1.8;
  position: absolute;
  left: 8%;
}
.userinfo-verified {
  font-size: 45%;
  font-weight: normal;
  color: whitesmoke;
}

.functions {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  position: absolute;
  top: 25%;
}
.functions-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 0 20px 0;
  padding: 0 0 10px 0;
  color: rgb(81, 81, 81);
  width: 85%;
  border-bottom: 1px solid whitesmoke;
}
.icon {
  height: 22px;
  width: 22px;
  margin: 0 15px 0 0;
}

.myscore {
  width: 83%;
}
.myscore-item {
  display: flex;
  flex-direction: row;
  color: rgb(81, 81, 81);
  margin: 2px 0 8px 0;
}
.myscore-coursename {
  width: 90%;
}