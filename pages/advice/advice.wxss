.advice {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.advice-avatar {
  height: 120px;
  width: 120px;
  border-radius: 50%;
  /* border: 3px solid rgb(81, 81, 81); */
  margin: 30px 0 20px 0;
}
.advice-note {
  width: 95%;
  height: 430px;
  position: absolute;
  top: 170px;
}
.advice-input {
  position: absolute;
  top: 200px;
  height: 380px;
  width: 80%;
  padding: 8px;
  font-size: 115%;
  font-family: Georgia, 'Times New Roman', Times, serif;
  line-height: 1.5;
}
.advice-submit {
  position: absolute;
  top: 520px;
  z-index: 10;
}
.advice-submit-icon {
  width: 50px;
  height: 50px;
}